---
import GoHomeIcon from '../../icons/GoHomeIcon.astro'
import type { Href, Title } from '../../types'
import Link from './Link.astro'

type Props = Href & Title

const { href, title } = Astro.props
---

<div class="flex items-center justify-center">
  <a
    class="rounded border-2 border-solid border-transparent text-center text-xl font-bold text-primary no-underline transition-[box-shadow] duration-300 ease-in-out hover:text-white focus:text-white focus:shadow-ring sm:mx-0 md:mx-1 md:w-auto md:p-2"
    href={href}
  >
    <div class="flex items-center justify-center space-x-2">
      <GoHomeIcon className="text-xl" />
      <span>Go back to {title} page</span>
    </div>
  </a>
</div>
