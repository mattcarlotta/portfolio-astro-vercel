---
import GoHomeIcon from '../../icons/GoHomeIcon.astro'
import type { Href, Title } from '../../types'
import Link from './Link.astro'

type Props = Href & Title

const { href, title } = Astro.props
---

<div class="flex items-center justify-center">
  <a
    class="rounded border-2 border-solid border-transparent text-center text-primary no-underline transition-[box-shadow] duration-300 ease-in-out hover:text-white focus:border-primary-100 focus:text-white focus:shadow-ring sm:mx-0 md:mx-1 md:w-auto md:p-2"
    aria-label={`Navigate back to ${title} page`}
    href={href}
  >
    <GoHomeIcon className="mr-1 align-middle text-xl" />
    go back to {title} page
  </a>
</div>
