---
import type { CONTENTFUL_BACKGROUND_PAGE } from '../../types'
import clsx from '../../utils/clsx'

interface Props {
  tech: CONTENTFUL_BACKGROUND_PAGE['tech']
}

const { tech } = Astro.props
---

<ul class="list-none space-y-2 pl-1 leading-relaxed md:space-y-1 md:pl-4">
  {
    tech.data.map((background, index) => (
      <li
        class={clsx(
          'items-center justify-between p-1 xs:flex md:px-2',
          index === 0 && 'mt-2',
          index % 2 ? 'bg-primary-900' : 'bg-transparent'
        )}
      >
        <p class="text-primary-25 sm:flex sm:flex-1">{background.technology}</p>
        <div role="img" aria-label={`${background.level} out of 5 stars`}>
          <span aria-hidden="true" class="stars-empty">
            <span
              aria-hidden="true"
              class="stars-filled"
              style={`width:${background.level + background.level * 0.25}rem`}
            />
          </span>
        </div>
      </li>
    ))
  }
</ul>
